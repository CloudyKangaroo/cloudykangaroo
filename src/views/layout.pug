doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='Sensu/Ubersmith/Puppet Management Interface')
    meta(name='author', content='Cloudy Kangaroo')
    title=title
    style(type='text/css').
      .borderless td{
        border: none !important;
        text-align:center;
      }
    style(type='text/css').
      .borderless th{
        border: none !important;
        text-align:center;
        max-width:80px;
        width:80px; 
        white-space:nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      }
    style(type='text/css').
      .borderless input{
        width: 80px !important;
      }
    style(type='text/css').
      .inputForm {
        overflow: auto;
        margin-bottom:40px;
      }
    if IE
      script(src='//oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js')
    include _head_css
    block head
  body
    a(href="#content").sr-only Skip to main content
    .container
      #alert.container
        #alert
      #nav.container
        include _navbar
        block navbar
      #content.container
        .row
          .col-md-14
            block content
    include _footer
    include _head_js

    block footer
